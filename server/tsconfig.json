{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "rootDir": "./",
        "outDir": "./dist",
        "types": [
            "node", "reflect-metadata"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
